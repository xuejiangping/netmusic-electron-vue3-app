{
  "name": "netmusic-electron-vue3-app",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "author": {
    "name": "xuejiangping",
    "email": "1127523185@qq.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "electron:build": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview",
    "test": "pwsh powershell/test.ps1",
    "views": "pwsh powershell/create_views.ps1",
    "electron:generate-icons": "electron-icon-builder --input=./public/xue-logo.png --output=dist --flatten"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@types/color": "^3.0.3",
    "@vueuse/electron": "^10.3.0",
    "axios": "^1.4.0",
    "color": "^4.2.3",
    "default-passive-events": "^2.0.0",
    "element-plus": "^2.3.6",
    "path-browserify": "^1.0.1",
    "pinia": "^2.1.4",
    "vue": "^3.3.4",
    "vue-router": "4",
    "vue3-video-play": "1.3.1-beta.6"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "electron": "^25.1.0",
    "electron-builder": "^24.6.3",
    "less": "^4.1.3",
    "less-loader": "^11.1.3",
    "typescript": "^5.0.2",
    "unplugin-auto-import": "^0.16.4",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.3.9",
    "vite-plugin-commonjs-externals": "^0.1.3",
    "vite-plugin-electron": "^0.11.2",
    "vue-tsc": "^1.4.2"
  },
  "build": {
    "appId": "com.xue6474.desktop",
    "productName": "xue6474",
    "copyright": "Copyright © 2022 xuejiangping",
    "directories": {
      "output": "release/${version}"
    },
    "asarUnpack": [],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "electron-main/**/*",
      "electron-preload/*",
      "electron-apis/*"
    ],
    "extends": null,
    "win": {
      "icon": "public/favicon-640-640.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    }
  }
}